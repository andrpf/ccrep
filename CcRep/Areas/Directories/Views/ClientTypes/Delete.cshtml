@using CcRep.Helpers
@using CcRep.Helpers.BreadCrumbs
@model CcRep.Models.dic.ClientType

@{
    ViewBag.Title = "Удалить тип клиента";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Crumbs breadCrumbs = CrumbsProvider.ForDirectories();
    breadCrumbs.AddRange(new Crumbs {
        new Crumb {Name = "Типы клиентов" },
        new Crumb {Name = "Удалить" },
        new Crumb {Name = Model.NameShort },
    });
}

@Html.BreadCrumbs(breadCrumbs, (string)ViewBag.Title)
@Html.Partial("../Shared/InheritWarning")

@using (Html.BeginCard("Подтверждение удалиния типа: " + Model.NameShort))
{
    <h3>Вы уверены, что хотите это удалить?</h3>
    <br />
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.NameShort)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NameShort)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit" class="btn btn-danger"><i class="la la-remove"></i>&nbsp; Удалить &nbsp;</button>
                <button href="@Url.Action("Index")" type="button" class="btn btn-secondary"><i class="la la-list"></i>&nbsp; Перейти к списку &nbsp;</button>
            </div>
        }
    </div>
}
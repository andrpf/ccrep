@using CcRep.Helpers
@using CcRep.Helpers.BreadCrumbs
@model CcRep.Models.dic.AcctReport

@{
    ViewBag.Title = "Удалить баланс второго порядка";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Crumbs breadCrumbs = CrumbsProvider.ForDirectories();
    breadCrumbs.AddRange(new Crumbs {
        new Crumb {Name = "Балансы второго порядка" },
        new Crumb {Name = "Удалить" },
        new Crumb {Name = Model.Acc2 },
    });
}
@Html.BreadCrumbs(breadCrumbs, (string)ViewBag.Title)

@using (Html.BeginCard("Подтверждение удалиния баланса: " + Model.Acc2))
{
    <h3>Вы уверены, что хотите это удалить?</h3>
    <br />
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Acc2)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Acc2)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Resident)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Resident)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CntrPartner)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CntrPartner)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit" class="btn btn-danger"><i class="la la-remove"></i>&nbsp; Удалить &nbsp;</button>
                <button href="@Url.Action("Index")" type="button" class="btn btn-secondary"><i class="la la-list"></i>&nbsp; Перейти к списку &nbsp;</button>
            </div>
        }
    </div>
}
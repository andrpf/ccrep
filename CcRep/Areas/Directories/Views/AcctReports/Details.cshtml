@using CcRep.Helpers
@using CcRep.Helpers.BreadCrumbs
@model CcRep.Models.dic.AcctReport

@{
    ViewBag.Title = "Информация о балансе второго порядка";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Crumbs breadCrumbs = CrumbsProvider.ForDirectories();
    breadCrumbs.AddRange(new Crumbs {
        new Crumb {Name = "Балансы второго порядка" },
        new Crumb {Name = "Информация о записи" },
        new Crumb {Name = Model.Acc2 },
    });
}

@Html.BreadCrumbs(breadCrumbs, (string)ViewBag.Title)

@using (Html.BeginCard("Информация о балансе: " + Model.Acc2))
{
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Acc2)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Acc2)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Resident)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Resident)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CntrPartner)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CntrPartner)
            </dd>

        </dl>
    </div>
    <div class="form-group">
        <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
            <button href="@Url.Action("Edit", new { id = Model.Id })" type="button" class="btn btn-cyan">Изменить</button>
            <button href="@Url.Action("Index")" type="button" class="btn btn-info">Перейти к списку</button>
        </div>
    </div>
}
@using CcRep.Helpers
@using CcRep.Helpers.BreadCrumbs

@model CcRep.Models.vk.HeaderRep

@{
    Crumbs breadCrumbs = new Crumbs {
        new Crumb {Name = "Отчеты" },
        new Crumb {Name = "Информация о записи" },
        new Crumb {Name = Model.Name },
    };

    ViewBag.Title = "Информация об отчете";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.BreadCrumbs(breadCrumbs, (string)ViewBag.Title)

@using (Html.BeginCard("Информация об отчете: " + Model.Name))
{
    <div>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BeginDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BeginDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EndDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreateDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreateDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Status)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Status)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ArchiveDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ArchiveDate)
            </dd>

            <dt>
                Кем заархивирован
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserArch.UserName)
            </dd>

            <dt>
                Кем создан
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserCreated.UserName)
            </dd>

            <dt>
                Последний раз редактировал
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserLastEdited.UserName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Comment)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Comment)
            </dd>
        </dl>
    </div>
    <p>
        <div class="form-group">
            <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                <button href="@Url.Action("Index")" type="button" class="btn btn-info">Перейти к списку</button>
            </div>
        </div>
    </p>
}
